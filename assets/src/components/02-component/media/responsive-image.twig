{#
/**
 * @file
 * Responsive Media example.
 */
#}

{% set x = x|default(1) %}
{% set y = y|default(1) %}

<div class='responsive-media responsive-media--{{ x }}-{{ y }}-all'>
  <object class='responsive-media__placeholder js-img-placeholder'
          data='//picsum.photos/42/{{ 42 * (y/x)|round }}?image=1041' type='image/jpeg'>alt</object>
  <picture class='responsive-media__picture'>
    <!--[if IE 9]><video style="display: none;"><![endif]-->
      <source srcset='//picsum.photos/767/{{ 767 * (y/x)|round }}?image=1041 1x' media='(min-width: 0em)' type='image/jpeg'>
      <source srcset='//picsum.photos/1534/{{ 1534 * (y/x)|round }}?image=1041 1.5x' media='(min-width: 0em)' type='image/jpeg'>
    <!--[if IE 9]></video><![endif]-->
    <img src='//picsum.photos/42/{{ 42 * (y/x)|round }}?image=1041' alt=''>
  </picture>
</div>
